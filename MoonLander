function _init()
	game_over=false
	win=false
	g=0.025 -- gravity
	make_player()
	make_ground()
end

function _update()
	if not game_over then
		move_player()
		check_land()
	else
		if (btn(5)) _init()
	end
end

function _draw()
	cls()
	draw_stars()
	draw_ground()
	draw_player()
	
	if (game_over) then
		if(win) then
			print("you win",48,48,11)
		else
			print("game over",48,48,8)
		end
		print("press ‚ùé to play again",20,70,5)
	end
end
